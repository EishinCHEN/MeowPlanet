<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 征服喵星人</title>
    @*引用bootstrap*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @*引用bootstrap icon*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    @*引用googlefont*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&display=swap"
          rel="stylesheet">
    @* 引用Vue CDN *@
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>

        @*導覽列*@ 
        <div class="wrapper">
            <div><a href="#" class="menu">相處之旅</a></div>
            <div><a href="#" class="menu">命運旅行</a></div>
            <div class="catlogo">
                <img src="~/images/白色/LOGO.PNG" />
            </div>
            <div><a href="#" class="menu">喵星日常</a></div>
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn">喵星居民<i class="fas fa-caret-down"></i></button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="#" style="border-bottom: none;">征服居民</a>
                    <a asp-controller="Membership" asp-action="Sender" style="border-top:none;">我要送養</a>
                </div>
            </div>
            <div id="login"><a asp-controller="Login" asp-action="Login">登入星球</a></div>
        </div>
        <div class="logo2">
            @*導覽列結束*@
            <div></div>

            
        </div>
        
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MeowPlanet -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="jquery.flipster.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
