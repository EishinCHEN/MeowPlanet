                    <img class="pic-planet" src="~/images/綠色/貓星球-綠色.PNG" />
                </div> -->
            </div>
        </div>
        <!--右邊區塊-->
        <div id="meow-manage-area" class="col-lg-9 col-md-10 col-sm-12 col-xs-12 ">
            <!--管理喵喵區塊-->
            <div class="meow-manage-title">★收藏居民</div>
            @*<form class="form-group">*@

            <div class="meow-manage-inside">
                <div v-for="n in catcollectlist" class="fakef2">
                    @*<div v-for="n in 16" class="fakef2">*@
                    <div v-if="n.isDeleted==0" class="alreadyDeliver">
                        <div class="group-top">
                            <div class="backimage">
                                <img src="~/images/三花7.jpg" class="meow-pic-inside">
                            </div>
                        </div>
                        <div class="pageline"></div>
                        <div class="group-inner">
                            <div class="meow-pic">
                                <div class="nametextsize0">
                                    {{n.name}}
                                </div>
                                <div class="agetextsize0">
                                    {{n.age}}
                                </div>
                                <div class="positiontextsize0">
                                    {{n.city}}{{n.country}}
                                </div>
                            </div>
                            <div class="cancelsize">
                                <img src="~/images/pageCatPlanetInhabitants/愛心(取消收藏).JPG" class="collectheart" />
                            </div>

                        </div>
                        <div class="transparentBack"></div>
                        <img src="~/images/收藏過期(去背換色).PNG" class="transparentImage" />
                        <div class="transparentText" v-on:click="CancelCollect(n)">刪除收藏</div>
                    </div>

                    <div v-if="n.isDeleted==1" class="meow-group">
                        <div class="group-top">
                            <div class="backimage">
                                <img src="~/images/三花7.jpg" class="meow-pic-inside">
                            </div>
                        </div>
                        <div class="pageline"></div>
                        <div class="group-inner">
                            <div class="meow-pic">
                                <div class="nametextsize1">
                                    {{n.name}}
                                </div>
                                <div class="agetextsize1">
                                    {{n.age}}
                                </div>
                                <div class="positiontextsize1">
                                    {{n.city}}{{n.country}}
                                </div>
                            </div>
                            <div class="cancelsize">
                                <img src="~/images/pageCatPlanetInhabitants/愛心(收藏).JPG" v-on:click="CancelCollect(n)" class="collectheart" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            @*</form>*@
        </div>


    </div>
    <div class="bottomline"></div>
    <script>
    var useVue = new Vue(
        {
            el: '#CatCollect',
            data: {
                pagecount: "1",
                catcollectlist: [],

                UserInfo: {
                "User_ID" : "@ViewData["UserID"]",
                },

                CollectData: {
                    "Cat_ID": "0",
                    "User_ID":"@ViewData["UserID"]",
                },
            },

            methods: {
                ShowCollect() {
                    //console.log(this.FilterData)
                    //console.log(useVue.RealName)
                    $.ajax(
                        {
                            type: 'POST',       //路由  後面是控制器
                            url: "@Url.Action("SearchCollect", "CatCollect")/",
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                            },
                            data: this.UserInfo,
                            success: function (qryResult, status, xhr) {
                               console.log(qryResult);
                                useVue.catcollectlist = qryResult;
                                console.log(useVue.catcollectlist);
                            }
                        }
                    );
                },
                deletecheck() {
                    if (window.confirm("是否確定取消收藏?")) {
                        return true;
                    }
                    else {
                        return false;
                    }
                },
                CancelCollect(a) {
                    if (this.deletecheck()) {
                            useVue.CollectData.Cat_ID = a.catId;
                            alert("確定刪除嗎?");
                             alert(useVue.CollectData.Cat_ID);

                             $.ajax(
                                {
                                    type: 'POST',       //路由  後面是控制器
                                    url: "@Url.Action("DeleteCollect", "CatPlanetInhabitants")/",
                                    beforeSend: function (xhr) {
                                        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                                    },
                                    data: this.CollectData,
                                    success: function (qryResult, status, xhr) {
                                        console.log(qryResult);
                                        useVue.test = qryResult;
                                        console.log(useVue.test);
                                        alert(qryResult);
                                     },
                                     error: function () {
                                         alert("連線失敗");
                                     }
                                }
                            );
                             a.isDeleted = 3;
                    }
                     else {
                        alert("取消收藏失敗");
                    }
                },
                closethisList(a) {
                    a.isDeleted = 3;
                },
            },
        })
    useVue.ShowCollect();
    </script>
