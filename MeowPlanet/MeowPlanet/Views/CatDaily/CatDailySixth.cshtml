@{
    ViewData["Title"] = "喵星日常";
}

@section Styles{
    @*引用bootstrap*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @*引用bootstrap icon*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    @*引用googlefont*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link href="~/css/catdaily/catdaily(sixth).css" rel="stylesheet" />
}


<div class="bgc">
    <div class="container">
        <div class="top">
            <div class="title-img">
                <img class="title-inner-img" src="~/images/橘色/圓形飛船貓-橘色.PNG" />
            </div>
            <div class="triangle"></div>
            <div class="dialog-box">
                <ul class="dialog-inner">
                    <li class="inner-title">本週喵星日常：</li>
                    <li class="inner-text">貓貓一直破壞家具怎麼辦?</li>
                </ul>
            </div>

        </div>
        <div class="week-buttons">
            <button class="week-change-button" type="button" onclick="location.href='@Url.Action("CatDailyFifth","CatDaily")'">第5週<i class="bi bi-caret-right-fill"></i></button>
        </div>
        <div class="messageboard">
            <div class="fb-comments" data-href="https://graph.facebook.com/v2.6/?fields=og_object{comments}&id=https://localhost:5001/CatDaily/CatDailySixth&access_token=accessToken" data-width="100%" data-numposts="1"></div>
            <div id="fb-root"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v12.0&appId=1089843521772872&autoLogAppEvents=1" nonce="RmY4hXTY"></script>
}
<script>
    FB.getLoginStatus(function (response) {
        if (response.status === 'connected') {
            var accessToken = response.authResponse.accessToken;
        }
    });
</script>

